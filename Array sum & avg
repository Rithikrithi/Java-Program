import java.util.*;
class demo{
    public static void main(String args[]){
        Scanner s1 = new Scanner(System.in);
        int a[] = new int[3];
        int sum=0;
        int avg=0;
        for(int i=0;i<a.length;i++){
            a[i]=s1.nextInt();
        }
        for(int i=0;i<a.length;i++){
          sum=sum+a[i];
          avg=sum/a.length;
        }
        System.out.println("ELEMENT COUNT:"+sum);
        System.out.println("AVERAGE IS:"+avg);
    }
}
